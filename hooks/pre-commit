#!/bin/bash
# Pre-commit hook that runs the same checks as the CI workflow

set -e  # Exit on first error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit checks...${NC}\n"

# Check if we're in a virtual environment, if not warn the user
if [ -z "$VIRTUAL_ENV" ]; then
    echo -e "${YELLOW}Warning: Not running in a virtual environment${NC}"
    echo -e "${YELLOW}Make sure you have all dependencies installed${NC}\n"
fi

# 1. Check code formatting with black
echo -e "${YELLOW}[1/5] Checking code formatting with black...${NC}"
if black --check src/ tests/; then
    echo -e "${GREEN}✓ Black formatting check passed${NC}\n"
else
    echo -e "${RED}✗ Black formatting check failed${NC}"
    echo -e "${YELLOW}Run 'black src/ tests/' to fix formatting${NC}\n"
    exit 1
fi

# 2. Lint with ruff
echo -e "${YELLOW}[2/5] Linting with ruff...${NC}"
if ruff check src/ tests/; then
    echo -e "${GREEN}✓ Ruff linting passed${NC}\n"
else
    echo -e "${RED}✗ Ruff linting failed${NC}"
    echo -e "${YELLOW}Run 'ruff check --fix src/ tests/' to fix some issues automatically${NC}\n"
    exit 1
fi

# 3. Type check with mypy
echo -e "${YELLOW}[3/5] Type checking with mypy...${NC}"
if python -m mypy src/continuous_wave --strict; then
    echo -e "${GREEN}✓ Mypy type checking passed${NC}\n"
else
    echo -e "${RED}✗ Mypy type checking failed${NC}\n"
    exit 1
fi

# 4. Run tests with coverage
echo -e "${YELLOW}[4/5] Running tests with coverage...${NC}"
if python -m pytest tests/ -v --cov=continuous_wave --cov-report=term-missing --cov-fail-under=90; then
    echo -e "${GREEN}✓ Tests passed with sufficient coverage${NC}\n"
else
    echo -e "${RED}✗ Tests failed or coverage below 90%${NC}\n"
    exit 1
fi

# 5. Build package
echo -e "${YELLOW}[5/5] Building package...${NC}"
if python -m build > /dev/null 2>&1; then
    echo -e "${GREEN}✓ Package build successful${NC}\n"
else
    echo -e "${RED}✗ Package build failed${NC}\n"
    exit 1
fi

# Clean up build artifacts
rm -rf build/ dist/ *.egg-info

echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${GREEN}✓ All pre-commit checks passed!${NC}"
echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}\n"

exit 0
